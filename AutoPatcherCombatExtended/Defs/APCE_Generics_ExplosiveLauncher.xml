  <ThingDef Class="CombatExtended.AmmoDef" ParentName="APCEGenericLauncherBase">
    <defName>Ammo_APCELauncher_Foam</defName>
    <label>generic fuel cell (Foam)</label>
    <graphicData>
      <texPath>Things/Ammo/FuelCell/Foam</texPath>
