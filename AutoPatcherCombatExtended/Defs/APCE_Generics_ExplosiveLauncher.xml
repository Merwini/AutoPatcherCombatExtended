  <ThingDef Class="CombatExtended.AmmoDef" Name="APCEGenericLauncherBase" ParentName="SpacerMediumAmmoBase" Abstract="True">
    <description>Container holding fuel for incendiary shot firearms.</description>
    <statBases>
      <Mass>0.08</Mass>
      <Bulk>0.14</Bulk>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting</li>
